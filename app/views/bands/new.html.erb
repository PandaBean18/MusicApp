<% content_for :header do %>
    <header class="form_header">
        <h1>Create a new band!</h1>
    </header>
<% end %>
<form class="form" action="<%= bands_url %>" method="post">

  <%= auth_token %>

  <input type="text" name="band[name]" placeholder="Band name" value="<%= @band.name ? @band.name : '' %>">

  <br>

  <input type="submit" value="Create Band">

</form>

<div class="form_home">
    <%= link_to 'Go to home.', bands_url %>
</div>

<% if flash.now[:errors] %>
    <br>
    <div class="errors">
        <p><%= flash.now[:errors] %></p>
    </div>
<% end %>
